<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodone">

        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Food Delivery"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.45"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/transprant_background"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintLeft_toLeftOf="@id/text_app_name"
            app:layout_constraintRight_toRightOf="@id/text_app_name"
            app:layout_constraintTop_toBottomOf="@id/text_app_name" />

        <Button
            android:id="@+id/btn_TownshipContinue"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/transprant_background"
            android:text="Continue"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="@id/spinner"
            app:layout_constraintRight_toRightOf="@id/spinner"
            app:layout_constraintTop_toBottomOf="@id/spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>